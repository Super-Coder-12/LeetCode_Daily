class Solution:
    def longestValidParentheses(self, s: str) -> int:
        stack = [-1]  # Initialize stack with -1 to handle the base case
        max_length = 0

        for i, char in enumerate(s):
##### 左括号记录index
            if char == '(':
                stack.append(i)
##### 右括号弹出来
            else:
                stack.pop()
                if not stack:
                    stack.append(i)
                else:
                    max_length = max(max_length, i - stack[-1])

        return max_length
