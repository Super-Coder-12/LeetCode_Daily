def change(amount, coins):
    dp = [0] * (amount + 1)
    dp[0] = 1
    
    for coin in coins:
        for j in range(coin, amount + 1):
            dp[j] += dp[j - coin]
    
    return dp[amount]

# 示例
coins = [1, 2, 5]
amount = 5
print(change(amount, coins))  # 输出 4，因为有四种方式：[1+1+1+1+1, 1+1+1+2, 1+2+2, 5]
