################# Fight for Goldman! ####################
################# this 'chars' does not get new data ############
class Solution:
    def compress(self, chars: List[str]) -> int:
        # count characters
        from collections import Counter
        rs = Counter(chars)
        keyList = list(rs.keys())
        valueList = list(rs.values())
        
        # convert to string

        for x in keyList:
            chars.append(x)
            chars.append(rs.get(x))
        return len(keyList)*5

################ study 2 pointers ##################
class Solution:
    def compress(self, chars: List[str]) -> int:
        i,j = 0,0

        while i < len(chars):
            char = chars[i]
            count = 0

            while i < len(chars) and chars[i] == char:
                i += 1
                count += 1
            
            chars[j] = char
            j += 1
            
            if count > 1:
                for digit in str(count):
                    chars[j] = digit
                    j += 1
        return j




